class Solution:
    def exclusiveTime(self, n: int, logs: List[str]) -> List[int]:
        result = [0] * n
        stack = []
        split_logs = [log.split(":") for log in logs]
        prev_time = 0
        i = 0

        while i < len(split_logs):
            func = int(split_logs[i][0])
            event = split_logs[i][1]
            time = int(split_logs[i][2])
            if event == "start":
                if stack:
                    res = time - prev_time
                    result[stack[-1][0]] += res
                stack.append((func,time))
                prev_time = time
            elif event == "end":
                f, t = stack.pop()
                result[f] += time - prev_time + 1
                prev_time = time + 1
                
            i += 1
        return result
