class Solution:
    def minAddToMakeValid(self, s: str) -> int:
        open_count = 0
        close_count = 0
        result = 0

        for i, ch in enumerate(s):
            if ch == "(":
                open_count += 1
            elif ch == ")":
                if open_count >= 1:
                    open_count -= 1
                else:
                    close_count += 1
        result = open_count + close_count
        return result 
