class Solution:
    def simplifyPath(self, path: str) -> str:
        
        parts =  [p for p in path.split('/') if p]
        stack = []
        res = ''
        length = len(parts)
        i = 0
        while i < length:
            if parts[i] == '.':
                i+=1
                continue
            elif parts[i] == '..':
                if stack:
                    stack.pop()
            else:
                stack.append(parts[i])
            i+=1
        
        if stack:
            res = '/' + '/'.join(stack)
        else: 
            res = res +'/'
        return res
