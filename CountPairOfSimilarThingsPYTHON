class Solution:
    def similarPairs(self, words: List[str]) -> int:
        
        freq ={}

        for word in words:
            char_set = frozenset(word)

            if char_set in freq:
                freq[char_set]+=1
            else:
                freq[char_set] =1
        
        count = 0
        for f in freq.values():
            count += f * (f-1)//2
        
        return count
